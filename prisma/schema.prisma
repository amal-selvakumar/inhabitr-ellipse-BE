generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  contactName String @map("contact_name")
  email String @unique
  password String
  contactNumber String @map("contact_number")
  createdAt DateTime @map("created_at") @default(now())
  roleType Int @map("role_type")
  status Int
  updatedAt DateTime @map("updated_at") @updatedAt

  orders Order[]
}

model Order{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userId String @map("user_id") @db.ObjectId
  propertyId String @map("property_id") @db.ObjectId
  orderDate DateTime @map("order_date") @default(now())
  status Int

  user User @relation(fields: [userId], references: [id])
  property Property @relation(fields: [propertyId], references: [id])

  orderDetails OrderDetails[]
}

model Property{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  location String
  description String?
  status Int

  orders Order[]
  furnitures Furniture[]
}

model Furniture {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  width       Float?
  height      Float?
  depth       Float?
  quantity    Int
  price       Int?
  status      Int
  propertyId  String? @map("property_id") @db.ObjectId // Add this field
  property    Property? @relation(fields: [propertyId], references: [id])
  OrderDetails OrderDetails[]
}

model OrderDetails{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  orderId String @map("order_id") @db.ObjectId
  furnitureId String @map("furniture_id") @db.ObjectId
  quantity Int

  order Order @relation(fields: [orderId],references: [id])
  furniture Furniture @relation(fields: [furnitureId], references: [id])
}



